<%- include('./partials/header') %>

<main class="container">
    <section class="products section container" id="products">
        <h2 class="section__title">
            meuhomeoffice.com
        </h2>

        <h4 class="section__subtitle">Os melhores produtos para seu home office, vocÃª encontra aqui</h4>

        <div class="products__container grid">

            <% produtos.forEach(produto => { %>  

                <article class="products__card">
                    <a href="/produto/<%= produto.id %>">
                        <div>

                            <img src="<%= produto.image %>" alt="" class="products__img">
                            
                            <h3 class="products__title"><%= produto.title %></h3>
                            <span class="products__price"><%= produto.price %></span>
                            
                            <button class="products__button">                                
                                <i class='bx bx-shopping-bag'></i>
                            </button>
                        </div>
                    </a>
                </article>

            <% }) %>

            
        </div>
    </section>        
  
</main>


<%- include('./partials/footer') %>